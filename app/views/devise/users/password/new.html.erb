<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="row">
   <div class="col-md-6 col-sm-6 col-xs-6">
    <div class="col-md-3 col-sm-3 col-xs-3">
    	<%= f.label :email, required: true, autofocus: true %>
    </div>
    <div class="col-md-9 col-sm-9 col-xs-9">
    <%= f.text_field :email, required: true, autofocus: true %>
    </div>
   </div>
  </div>
  <div class="row">
   <div class="col-md-3 col-sm-3 col-xs-3">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-large btn-success" %>
   </div>
  </div>
<% end %>

<%= render "users/password/shared/links" %>
