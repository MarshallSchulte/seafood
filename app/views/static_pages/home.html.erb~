<script>
	$(document).ready(function() {
		var logo = document.getElementById('logo');
		var width = $(window).width();

		if (width <= 991 && width > 360){
			$(logo).attr('src', 'assets/seafood-medium.png');
		}

		else if (width <= 360) {
			logo.attr('src', 'assets/seafood-small.png');
		}
	});
</script>
